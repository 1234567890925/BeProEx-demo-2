# ====== Server ======
PORT=8000
HOST=0.0.0.0

# ====== MongoDB ======
MONGODB_URI=mongodb://localhost:27017
MONGO_DB=beproex_support
MONGO_COLLECTION=kb_chunks

# If you're using MongoDB Atlas Vector Search, set to 'true' and create a vector index (see README).
USE_ATLAS_VECTOR_SEARCH=false

# ====== Embeddings ======
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
CHUNK_SIZE=800
CHUNK_OVERLAP=120
TOP_K=5

# ====== LLM (OpenAI) ======
OPENAI_API_KEY= api_key
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.2